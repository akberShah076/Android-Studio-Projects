<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/layout_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/score_board"
        android:textSize="@dimen/text_size_large"
        android:textAlignment="center"
        android:paddingBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtPlayer1Name"
                android:layout_width="0dp"
                android:layout_height="@dimen/edit_text_height"
                android:layout_weight="1"
                android:text="@string/player1_default_name"/>

            <View
                android:layout_width="@dimen/view_width_height"
                android:layout_height="@dimen/view_width_height"
                android:background="@android:color/holo_green_light"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <RatingBar
            android:id="@+id/ratingBarGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:layout_marginTop="@dimen/rating_bar_margin_top"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtPlayer2Name"
                android:layout_width="0dp"
                android:layout_height="@dimen/edit_text_height"
                android:layout_weight="1"
                android:text="@string/player2_default_name"/>

            <View
                android:layout_width="@dimen/view_width_height"
                android:layout_height="@dimen/view_width_height"
                android:background="@android:color/holo_red_light"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <RatingBar
            android:id="@+id/ratingBarRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:layout_marginTop="@dimen/rating_bar_margin_top"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="172dp"
        android:layout_height="122dp"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:text="@string/play_button"
        android:textSize="30sp" />
</LinearLayout>
