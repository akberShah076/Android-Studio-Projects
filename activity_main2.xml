<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_padding">

    <View
        android:id="@+id/btnPlayerOneIndicator"
        android:layout_width="@dimen/button_indicator_size"
        android:layout_height="@dimen/button_indicator_size"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_green_light"/>

    <TextView
        android:id="@+id/tvPlayerTurn"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_toEndOf="@id/btnPlayerOneIndicator"
        android:layout_toStartOf="@id/btnPlayerTwoIndicator"
        android:gravity="center"
        android:text="@string/player1_turn"
        android:textSize="@dimen/text_size_medium"/>

    <View
        android:id="@+id/btnPlayerTwoIndicator"
        android:layout_width="@dimen/button_indicator_size"
        android:layout_height="@dimen/button_indicator_size"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_red_light"
        android:visibility="invisible"/> <!-- Initially set to invisible -->

    <ProgressBar
        android:id="@+id/progressBarTime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/progress_bar_height"
        android:layout_below="@id/btnPlayerOneIndicator"
        android:layout_marginTop="16dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@android:drawable/progress_horizontal"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="@dimen/grid_layout_size"
        android:layout_height="@dimen/grid_layout_size"
        android:layout_centerInParent="true"
        android:rowCount="3"
        android:columnCount="3">

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contentDescription="@string/position_description_1"
            android:padding="@dimen/button_padding"/>



        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contentDescription="Position 2"
            android:padding="5dp"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contentDescription="Position 3"
            android:padding="5dp"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contentDescription="Position 4"
            android:padding="5dp"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contentDescription="Position 5"
            android:padding="5dp"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contentDescription="Position 6"
            android:padding="5dp"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contentDescription="Position 7"
            android:padding="5dp"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contentDescription="Position 8"
            android:padding="5dp"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contentDescription="Position 9"
            android:padding="5dp"/>

    </GridLayout>

</RelativeLayout>
